# Database - PostgreSQL Connection
DATABASE_URL="postgresql://postgres:password@localhost:5432/ecommerce_db"

# JWT Secret - SCHIMBĂ ÎN PRODUCȚIE!
JWT_SECRET="super-secret-jwt-key-change-in-production-minimum-32-characters-long"

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS - Frontend URL
CORS_ORIGIN="http://localhost:3000"

# OpenAI (OPȚIONAL - pentru funcționalități AI)
# OPENAI_API_KEY="sk-your-real-api-key-here"
OPENAI_MODEL="gpt-4o-mini"

# Docker PostgreSQL (opțional, pentru docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=ecommerce_db

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_EMAIL="noreply@example.com"
SMTP_FROM_NAME="Aplicație"
